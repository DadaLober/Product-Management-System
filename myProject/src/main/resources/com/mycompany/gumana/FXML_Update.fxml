<BorderPane prefHeight="420.0" prefWidth="720.0" style="-fx-background-color: #243447;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.gumana.FXML_UpdateController">
   <center>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="390.0" prefWidth="735.0">
         <children>
            <Label layoutX="28.0" layoutY="22.0" text="Updating Product Info..." textFill="#eeeeee">
               <font>
                  <Font name="Tahoma" size="30.0" />
               </font>
            </Label>
            <Label layoutX="38.0" layoutY="95.0" text="New Product Name:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txt_newproductName" layoutX="38.0" layoutY="115.0" prefHeight="26.0" prefWidth="295.0" promptText="New Name of Product" />
            <Label layoutX="38.0" layoutY="165.0" text="New Regular Price &amp; Unit:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txt_newproductPrice" layoutX="38.0" layoutY="185.0" prefHeight="26.0" prefWidth="141.0" promptText="New Price" />
            <TextField editable="false" layoutX="186.0" layoutY="185.0" prefHeight="26.0" prefWidth="148.0" promptText="Unit" text="1" />
            <Label layoutX="393.0" layoutY="95.0" text="New Model or Item #:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txt_newproductModelnum" layoutX="391.0" layoutY="115.0" prefHeight="26.0" prefWidth="295.0" promptText="(ex.A2221,p6774y, etc.)" />
            <Label layoutX="391.0" layoutY="165.0" text="New Brand:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txt_newproductBrand" layoutX="391.0" layoutY="185.0" prefHeight="26.0" prefWidth="295.0" promptText="(ex. HyperX, Razer etc.)" />
            <Label layoutX="391.0" layoutY="235.0" text="New Category:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
            <ComboBox fx:id="cb_newcategory" layoutX="392.0" layoutY="255.0" prefHeight="26.0" prefWidth="292.0" />
            <TextField fx:id="txt_newproductQuantity" layoutX="38.0" layoutY="255.0" prefHeight="26.0" prefWidth="295.0" promptText="New Product Quantity" />
            <Button fx:id="btnUpdate" layoutX="34.0" layoutY="334.0" mnemonicParsing="false" onAction="#btn_updateProduct" prefHeight="35.0" prefWidth="650.0" style="-fx-background-color: #c51f5d;" text="Update Product" textFill="WHITE">
               <font>
                  <Font name="Verdana" size="16.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="#eeeeee" iconLiteral="fab-superpowers" iconSize="15" />
               </graphic>
            </Button>
            <Label layoutX="38.0" layoutY="235.0" text="New Product Quantity:" textFill="WHITE">
               <font>
                  <Font name="Tahoma" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="28.0" prefWidth="520.0" style="-fx-background-color: #141d26;">
         <children>
            <Button fx:id="addMinimizeButton" mnemonicParsing="false" onAction="#addMinimizeButtonOnAction" style="-fx-background-color: #141d26;">
               <HBox.margin>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </HBox.margin>
               <graphic>
                  <FontIcon iconColor="#c51f5d" iconLiteral="far-window-minimize" iconSize="15" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="addCancelButton" mnemonicParsing="false" onAction="#addCancelButtonOnAction" style="-fx-background-color: #141d26;">
               <HBox.margin>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </HBox.margin>
               <graphic>
                  <FontIcon iconColor="#c51f5d" iconLiteral="far-window-close" iconSize="20" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </HBox>
   </top>
</BorderPane>
